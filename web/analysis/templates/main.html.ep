	<div id="main">

		<h3> <%= $page_data->{title} %> </h3>

		% foreach my $c ( @{$page_data->{comment}} )
		% {
		<p> <%== $c %> </p>
		% }

		<table width="100%" >
		% my $i = 0;
		% foreach my $row ( @{$page_data->{data}} )
		% {
			<tr>
		%	foreach my $cell ( @$row )
		%	{
				<%== (0 == $i) ? '<th>' : '<td>' %>
				<%= $cell %>
				<%== (0 == $i) ? '</th>' : '</td>' %>
		%	}
		%	$i++;
			</tr>
		% }
		</table>
	</div>
