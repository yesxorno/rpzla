<!DOCTYPE HTML>
<html lang="en">
<head>
	%= include 'head'
</head>
<body>
<div id="wrap">
	<% # include the relevant template %>
	%= include 'header'
	% if ( 'home' eq $name )
	% {
		%= include 'home'
	% }
	% elsif ( 'data' eq $name )
	% {
		%= include 'selection'
		%= include 'data_header'
		% if ( 1 == $page_data->{graph} )
		% {
			%= include 'graph'
		% }
		% if ( 1 == $page_data->{table} )
		% {
			%= include 'table'
		% }
	% }
	% elsif ( 'help' eq $name )
	% {
		%= include 'help'
	% }
	% elsif ( 'about' eq $name )
	% {
		%= include 'about'
	% }
	%= include 'footer'
</div>

</body>
</html>
